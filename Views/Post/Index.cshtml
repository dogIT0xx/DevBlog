@model IEnumerable<DevBlog.Models.PostModel>

<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var item in Model)
    {
        <div class="col" data-id="@Html.DisplayFor(modelItem => item.Id)">
            <div class="card shadow-lg" style="height:550px">
                <img src="@Html.DisplayFor(modelItem => item.ThumbnailUrl)" class="card-img-top" alt="Hollywood Sign on The Hill" height="300" width="400" />
                <div class="card-body">
                    <h5 class="card-title" style="height:45px;">
                        <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
                    </h5>
                    <p class="card-text my-3" style="height:100px; text-align:justify; overflow: hidden; word-spacing:2px;">
                        @* Xóa <p> </p> *@
                        @Html.DisplayFor(modelItem => item.PreviewContent)
                    </p>
                    <a class="btn btn-dark mb-3">Code</a>
                </div>
            </div>
        </div>
    }
</div>

<div class="d-flex mt-3 justify-content-center" aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</div>